    reason : String [1]
    requestedDate : DateTime
    status : String [1]
    targetId : String [1]
    targetType : String
    transferCost : Quantity
    type : String [1]
    usageType : String
    @baseType : String
    @schemaLocation : Uri
    @type : String
}

