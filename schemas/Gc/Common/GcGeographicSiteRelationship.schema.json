{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "GcGeographicSiteRelationship.schema.json",
    "title": "GcGeographicSiteRelationship",
    "definitions": {
        "GcGeographicSiteRelationship": {
            "$id": "#GcGeographicSiteRelationship",
            "description": "Used to describe relationship between geographic site.",
            "type": "object",
            "required": [
                "id",
                "relationshipType"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the related site entity within the server"
                },
                "relationshipType": {
                    "type": "string",
                    "description": "Type of relationship"
                }
            }
        }
    }
}